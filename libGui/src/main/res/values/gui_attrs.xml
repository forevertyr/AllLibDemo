<resources>
    <attr name="key_text" format="string"/>
    <attr name="is_arrow" format="boolean"/>
    <attr name="is_bottomline" format="boolean"/>
    <attr name="key_ems" format="integer"/>
    <attr name="value_text" format="string"/>
    <attr name="key_img" format="reference"/>
    <attr name="value_hint" format="string"/>
    <attr name="key_text_size" format="dimension"/>
    <attr name="value_text_size" format="dimension"/>
    <attr name="value_text_color" format="color"/>
    <attr name="key_text_color" format="color"/>
    <declare-styleable name="ZKeyValueView">
        <attr name="key_img"/>
        <attr name="value_text"/>
        <attr name="key_ems"/>
        <attr name="key_text"/>
        <attr name="is_arrow"/>
        <attr name="is_bottomline"/>
        <attr name="value_hint"/>
        <attr name="value_gravity" format="string"/>
        <attr name="key_text_size"/>
        <attr name="value_text_size"/>
        <attr name="value_text_color"/>
        <attr name="key_text_color"/>
    </declare-styleable>

    <declare-styleable name="ZKeyValueEditView">
        <attr name="value_hint"/>
        <attr name="value_singleline" format="boolean"/>
        <attr name="value_text"/>
        <attr name="key_img"/>
        <attr name="key_ems"/>
        <attr name="key_text"/>
        <attr name="is_arrow"/>
        <attr name="is_bottomline"/>
        <attr name="key_text_size"/>
        <attr name="value_text_size"/>
        <attr name="value_text_color"/>
        <attr name="key_text_color"/>
    </declare-styleable>
    
    <declare-styleable name="ZKeySwitchView">
        <attr name="key_img"/>
        <attr name="key_ems"/>
        <attr name="key_text"/>
        <attr name="is_bottomline"/>
        <attr name="key_text_size"/>
        <attr name="key_text_color"/>
        <attr name="is_checked" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="SwitchButton">
        <attr name="frameDrawable" format="reference|color"/>
        <attr name="stateDrawable" format="reference|color"/>
        <attr name="stateMaskDrawable" format="reference|color"/>
        <attr name="sliderDrawable" format="reference|color"/>
        <attr name="withTextInterval" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ZBanner">
        <attr name="indicator_width" format="dimension"/>
        <attr name="indicator_height" format="dimension"/>
        <attr name="indicator_margin" format="dimension"/>
        <attr name="indicator_drawable_selected" format="reference"/>
        <attr name="indicator_drawable_unselected" format="reference"/>
    </declare-styleable>

    <!--录制视频控件-->
    <declare-styleable name="VideoRecorderView">
        <attr name="is_open_camera" format="boolean"/>  <!-- 开始是否打开摄像头 -->
        <attr name="record_max_time" format="integer"/> <!-- 一次拍摄最长时间 -->
        <attr name="record_width" format="integer"/>    <!-- 视频分辨率宽度 -->
        <attr name="record_height" format="integer"/>   <!-- 视频分辨率高度 -->
    </declare-styleable>
</resources>